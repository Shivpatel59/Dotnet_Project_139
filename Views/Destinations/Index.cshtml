@model IEnumerable<Tourism_App.Models.Destination>

@{
    ViewData["Title"] = "Destinations";
}

<h1>Explore Destinations</h1>

<div class="row">
    @foreach (var destination in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@destination.ImageUrl" class="card-img-top" alt="@destination.Name" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@destination.Name</h5>
                    <p class="card-text">@destination.Description</p>
                    <p class="card-text"><strong>Location:</strong> @destination.Location</p>
                    <p class="card-text"><strong>Price:</strong> $@destination.Price / â‚¹@(destination.Price * 83)</p>
                    <a href="@Url.Action("Details", "Destinations", new { id = destination.Id })" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
