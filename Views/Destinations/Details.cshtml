@model Tourism_App.Models.Destination

@{
    ViewData["Title"] = @Model.Name;
}

<div class="row">
    <div class="col-md-6">
        <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name">
    </div>
    <div class="col-md-6">
        <h1>@Model.Name</h1>
        <p><strong>Location:</strong> @Model.Location</p>
        <p><strong>Price:</strong> $@Model.Price / â‚¹@(Model.Price * 83)</p>
        <p>@Model.Description</p>
        @if (Context.Session.GetString("UserId") != null)
        {
            <a href="@Url.Action("Create", "Bookings", new { destinationId = Model.Id })" class="btn btn-success btn-lg">Book Now</a>
        }
        else
        {
            <a href="@Url.Action("Login", "Account")" class="btn btn-success btn-lg">
                <i class="fas fa-sign-in-alt me-2"></i>Login to Book
            </a>
        }
        <a href="@Url.Action("Index", "Destinations")" class="btn btn-secondary">Back to Destinations</a>
    </div>
</div>
