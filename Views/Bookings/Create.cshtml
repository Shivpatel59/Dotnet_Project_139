@model Tourism_App.Models.Booking

@{
    ViewData["Title"] = "Book Your Trip";
    var destination = ViewBag.Destination as Tourism_App.Models.Destination;
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header Section -->
            <div class="text-center mb-5">
                <h1 class="display-4 text-primary mb-3">Book Your Trip</h1>
                <p class="lead text-muted">Secure your adventure with transparent pricing and easy booking</p>
            </div>

            <!-- Destination Info Card -->
            @if (destination != null)
            {
                <div class="card shadow-lg mb-5 border-0">
                    <div class="card-body p-4">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h2 class="card-title h3 text-dark mb-3">@destination.Name</h2>
                                <p class="card-text text-muted mb-3">@destination.Description</p>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-map-marker-alt text-primary me-2"></i>
                                            <span class="fw-semibold">@destination.Location</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-dollar-sign text-success me-2"></i>
                                            <span class="fw-bold text-success fs-5">$@destination.Price.ToString("F2") / ₹@(destination.Price * 83).ToString("F2")</span>
                                            <small class="text-muted ms-1">per person</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 text-center">
                                <img src="@destination.ImageUrl" alt="@destination.Name" class="img-fluid rounded shadow" style="max-height: 200px; object-fit: cover;">
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Booking Form -->
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card shadow-lg border-0">
                        <div class="card-header bg-primary text-white text-center py-3">
                            <h3 class="card-title mb-0">
                                <i class="fas fa-calendar-check me-2"></i>
                                Booking Details
                            </h3>
                        </div>
                        <div class="card-body p-4">
                            <!-- Info Alert -->
                            <div class="alert alert-info border-0 shadow-sm mb-4">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-info-circle text-info fs-4"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="alert-heading mb-1">Personal Details Collection</h6>
                                        <p class="mb-0">Your personal information (name, email, phone) will be collected when our representative calls you after booking confirmation for a personalized experience.</p>
                                    </div>
                                </div>
                            </div>

                            <form asp-action="Create" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                                <input type="hidden" asp-for="DestinationId" />
                                <!-- Name -->
                                <div class="mb-4">
                                    <label asp-for="Name" class="form-label fw-bold text-dark">
                                        <i class="fas fa-user text-primary me-2"></i>
                                        Full Name
                                    </label>
                                    <input asp-for="Name" class="form-control form-control-lg" type="text" placeholder="Enter your full name" />
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>

                                <!-- Phone Number -->
                                <div class="mb-4">
                                    <label asp-for="Phone" class="form-label fw-bold text-dark">
                                        <i class="fas fa-phone-alt text-primary me-2"></i>
                                        Phone Number
                                    </label>
                                    <input asp-for="Phone" class="form-control form-control-lg" type="tel" placeholder="Enter your phone number" />
                                    <span asp-validation-for="Phone" class="text-danger small"></span>
                                </div>
                                <!-- Number of People -->
                                <div class="mb-4">
                                    <label asp-for="NumberOfPeople" class="form-label fw-bold text-dark">
                                        <i class="fas fa-users text-primary me-2"></i>
                                        Number of Travelers
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="fas fa-user-friends text-muted"></i>
                                        </span>
                                        <input asp-for="NumberOfPeople" class="form-control border-start-0 ps-0" type="number" min="1" max="20" placeholder="Enter number of people" />
                                        <span class="input-group-text bg-light">person(s)</span>
                                    </div>
                                    <span asp-validation-for="NumberOfPeople" class="text-danger small"></span>
                                    <div class="form-text text-muted">Select how many people will be traveling (1-20 travelers)</div>
                                </div>

                                <!-- Price per Person -->
                                <div class="mb-4">
                                    <label asp-for="ChargePerPerson" class="form-label fw-bold text-dark">
                                        <i class="fas fa-dollar-sign text-success me-2"></i>
                                        Price per Person
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text bg-success text-white">$</span>
                                        <input asp-for="ChargePerPerson" class="form-control bg-light" type="number" step="0.01" min="0" readonly />
                                    </div>
                                    <span asp-validation-for="ChargePerPerson" class="text-danger small"></span>
                                    <div class="form-text text-muted">
                                        <i class="fas fa-lock text-warning me-1"></i>
                                        Price is pre-filled from destination details and cannot be modified
                                    </div>
                                </div>

                                <!-- Total Cost -->
                                <div class="mb-4">
                                    <label class="form-label fw-bold text-dark">
                                        <i class="fas fa-calculator text-info me-2"></i>
                                        Total Cost
                                    </label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text bg-info text-white">$</span>
                                        <input type="text" class="form-control bg-light fw-bold text-success" id="totalCostDisplay" value="@Model.TotalCost.ToString("F2")" readonly />
                                        <span class="input-group-text bg-light">/ ₹</span>
                                        <input type="text" class="form-control bg-light fw-bold text-success" id="totalCostDisplayINR" value="@(Model.TotalCost * 83).ToString("F2")" readonly />
                                    </div>
                                    <div class="form-text text-muted">
                                        <i class="fas fa-sync-alt text-primary me-1"></i>
                                        Calculated automatically: Number of People × Price per Person
                                    </div>
                                </div>

                                <!-- Action Buttons -->
                                <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                                    <button type="submit" class="btn btn-primary btn-lg px-5 py-3">
                                        <i class="fas fa-paper-plane me-2"></i>
                                        Register Booking
                                    </button>
                                    <a href="@Url.Action("Index", "Destinations")" class="btn btn-outline-secondary btn-lg px-5 py-3">
                                        <i class="fas fa-arrow-left me-2"></i>
                                        Back to Destinations
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function() {
            function updateTotalCost() {
                var numberOfPeople = parseInt($('#NumberOfPeople').val()) || 1;
                var chargePerPerson = parseFloat($('#ChargePerPerson').val()) || 0;
                var totalCost = numberOfPeople * chargePerPerson;
                $('#totalCostDisplay').val(totalCost.toFixed(2));
                $('#totalCostDisplayINR').val((totalCost * 83).toFixed(2));
            }

            // Update total cost when number of people changes
            $('#NumberOfPeople').on('input change', function() {
                updateTotalCost();
            });

            // Initial calculation
            updateTotalCost();
        });
    </script>
}
