@model Tourism_App.Models.Booking

@{
    ViewData["Title"] = "Booking Confirmed";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h1 class="card-title mb-0">Booking Confirmed!</h1>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        <h4 class="alert-heading">Thank you for your booking!</h4>
                        <p>@ViewBag.Message</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5>Booking Details</h5>
                            <table class="table table-sm">
                                <tr>
                                    <td><strong>Booking ID:</strong></td>
                                    <td>@Model.Id</td>
                                </tr>
                                <tr>
                                    <td><strong>Name:</strong></td>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <td><strong>Phone:</strong></td>
                                    <td>@Model.Phone</td>
                                </tr>
                                <tr>
                                    <td><strong>Number of People:</strong></td>
                                    <td>@Model.NumberOfPeople</td>
                                </tr>
                                <tr>
                                    <td><strong>Charge per Person:</strong></td>
                                    <td>$@Model.ChargePerPerson.ToString("F2")</td>
                                </tr>
                                <tr class="table-primary">
                                    <td><strong>Total Cost:</strong></td>
                                    <td><strong>$@Model.TotalCost.ToString("F2")</strong></td>
                                </tr>
                                <tr>
                                    <td><strong>Booking Date:</strong></td>
                                    <td>@Model.BookingDate.ToString("MMMM dd, yyyy HH:mm")</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5>Next Steps</h5>
                            <div class="alert alert-info">
                                <p><i class="fas fa-phone"></i> <strong>Follow-up Call:</strong> Our representative will contact you within 24 hours to discuss travel arrangements and provide further information.</p>
                                <p><i class="fas fa-envelope"></i> <strong>Email Confirmation:</strong> A detailed itinerary and payment instructions will be sent to your email address.</p>
                                <p><i class="fas fa-clock"></i> <strong>Processing Time:</strong> Please allow 2-3 business days for complete processing.</p>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("Index", "Destinations")" class="btn btn-primary me-2">Explore More Destinations</a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
